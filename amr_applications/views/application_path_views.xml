<odoo>
    <data>
        <record id="application_path_form" model="ir.ui.view">
            <field name="name">application.path.form</field>
            <field name="model">application.path</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <form string="sync">
                    <header>
                         <field name="active" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="path"/>
                            </group>
                            <group>
                                <field name="application_auth_id" />
                                <field name="application_resource_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="application_path_tree" model="ir.ui.view">
            <field name="name">application.path.tree</field>
            <field name="model">application.path</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <tree decoration-danger="state=='error'" decoration-success="state=='done'">
                    <field name="active" invisible="1"/>
                    <field name="name"/>
                    <field name="path"/>
                    <field name="application_auth_id" />
                    <field name="application_resource_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="application_path_action">
            <field name="name">Application Path</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">application.path</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'update': False}</field>
        </record>

    </data>
</odoo>
