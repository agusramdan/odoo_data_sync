<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sync Data Token" groups="base.group_erp_manager">
                    <field name="sync_token_ids" >
                        <tree create="false" delete="true">
                            <field name="token"/>
                            <field name="expires"/>
                        </tree>
                    </field>
                    <button name="action_create_sync_token"  type="object" string="Create Sync Token" class="oe_highlight" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
