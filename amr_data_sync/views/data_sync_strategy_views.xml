<odoo>
    <data>

        <record id="external_data_sync_model_filter" model="ir.ui.view">
            <field name="name">external.data.sync.strategy.search</field>
            <field name="model">external.data.sync.strategy</field>
            <field name="arch" type="xml">
                <search string="External Data">
<!--                    <field name="name"/>-->
<!--                    <searchpanel>-->
<!--                        <field name="internal_model" icon="fa-home" enable_counters="1"/>-->
<!--                    </searchpanel>-->
<!--                    <separator/>-->
<!--                    <separator/>-->
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_external_model" string="Model" domain="[]" context="{'group_by': 'external_model'}"/>
                        <filter name="group_application_name" string="Application Name" domain="[]" context="{'group_by': 'external_app_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="external_data_sync_strategy_form" model="ir.ui.view">
            <field name="name">external.data.sync.strategy.form</field>
            <field name="model">external.data.sync.strategy</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <form string="sync">
                    <header>
                        <button name="action_sync_now" type="object" string="Sync Data From Server" class="oe_highlight" />
<!--                        <field name="state" readonly="1" widget="statusbar" statusbar_visible="progress,done"/>-->
                    </header>
                    <sheet>
                        <group>
                            <group>
<!--                                <field name="name"/>-->
                                <field name="server_sync_id"/>
                                <field name="external_app_name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sync Data / Cron">
                                <group>
                                    <group>
                                        <field name="external_sync" />
                                        <field name="sync_cron" />
                                        <field name="company_ids"/>
                                        <field name="filter_company_by_name"/>
                                        <field name="external_domain"/>
                                        <field name="external_context"/>
                                        <field name="filter_last_update"/>
                                    </group>
                                    <group>
                                        <field name="strategy" />
                                        <field name="internal_id_same_as_external" />
                                        <field name="internal_id_offset" attrs="{'invisible':[('internal_id_same_as_external','=',False)]}"/>
                                        <field name="internal_lookup_fields" />
                                        <field name="internal_lookup_method" />
                                        <field name="internal_call_method" attrs="{'invisible':[('external_sync','!=','method_call')]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Mapping">
                                <group>
                                    <group>
                                        <field name="external_model"/>
                                        <field name="external_fields"/>
                                        <field name="parent_sync_strategy_id"/>
                                        <field name="parent_field_name" />
                                        <field name="relation_strategy"/>
                                    </group>
                                    <group>
                                        <field name="internal_model" />
                                        <field name="exclude_fields" />
                                        <field name="internal_process_method" />
                                        <field name="internal_context" />
                                        <field name="company_id"/>
                                    </group>
                                </group>
                                <field name="line_mapping_ids" context="{'default_sync_strategy_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="sync_strategy_id" invisible="1"/>
                                        <field name="sequence" widget="handle" />
                                        <field name="active" />
                                        <field name="name"/>
                                        <field name="internal_field"/>
                                        <field name="mapping_strategy"/>
                                        <field name="key_name"/>
                                        <button name="action_open_view" type="object"
                                                string="More" class="oe_highlight"
                                                attrs="{'invisible':['|',('mapping_strategy','=','field_mapping'),('sync_strategy_id','=',0)]}"
                                        />
                                    </tree>
                                </field>
                                <field name="line_sync_strategy_ids" readonly="1">
                                    <tree>
                                        <field name="parent_field_name"/>
                                        <field name="external_model"/>
                                        <field name="internal_model"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Script" attrs="{'invisible':[('internal_process_method','!=',False)]}">
                                <group>
                                    <field name="id" invisible="1"/>
                                    <field name="test_external_data_sync_id" domain="[('sync_strategy_id','=',id)]" />
                                </group>
                                <field name="eval_script" widget="code"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="external_data_sync_strategy_tree" model="ir.ui.view">
            <field name="name">external.data.sync.strategy.tree</field>
            <field name="model">external.data.sync.strategy</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <tree >
                    <field name="server_sync_id"/>
                    <field name="external_app_name"/>
                    <field name="external_model"/>
                    <field name="internal_model"/>
                    <field name="sync_cron" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="external_data_sync_strategy_action">
            <field name="name">Data Sync Strategy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">external.data.sync.strategy</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
<!--            <field name="context">{'update': False}</field>-->
        </record>
    </data>
</odoo>
