<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.cron" id="external_data_sync_from_server_cron">
        <field name="name">External Data Sync Cron</field>
        <field name="model_id" ref="model_external_data_sync_cron"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_from_server()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:05:00')"/>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record model="ir.cron" id="external_data_process_cron">
        <field name="name">External Data Process Cron</field>
        <field name="model_id" ref="model_external_data_sync"/>
        <field name="state">code</field>
        <field name="code">model.cron_process_data()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:05:00')"/>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>
